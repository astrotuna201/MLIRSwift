{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "type": "shell",
      "command": "swift",
      "args": [
        "build",
        "--build-tests",
      ],
      "group": {
        "kind": "build",
        "isDefault": true,
      },
    },
    {
      "label": "Run All Tests",
      "type": "shell",
      "command": "swift",
      "args": [
        "test",
      ],
      "group": {
        "kind": "test",
        "isDefault": true,
      },
    },
  ]
}